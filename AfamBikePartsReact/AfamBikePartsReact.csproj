    <Content Update="tslint.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
    <Content Update="_npm-shrinkwrap.json">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
