  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="if $(ConfigurationName) == Debug (&#xD;&#xA;  npm run dev&#xD;&#xA;) else (&#xD;&#xA;  npm run prod&#xD;&#xA;)" />
  </Target>
  
